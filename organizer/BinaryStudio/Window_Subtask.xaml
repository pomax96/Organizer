<Window x:Class="BinaryStudio.Window_Subtask"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Window_Subtask" Height="500" Width="800">
    <Grid>
        <Grid.Background>
            <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                <GradientStop Color="Black" Offset="0"/>
                <GradientStop Color="#FF857C7C" Offset="1"/>
            </LinearGradientBrush>
        </Grid.Background>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="19*"/>
            <ColumnDefinition Width="22*"/>
            <ColumnDefinition Width="103*"/>
            <ColumnDefinition Width="115*"/>
            <ColumnDefinition Width="508*"/>
            <ColumnDefinition Width="23*"/>
        </Grid.ColumnDefinitions>
        <TextBox x:Name="TextBox_Text" Height="Auto" Margin="3,45,0,-5" TextWrapping="Wrap" Text="" Grid.ColumnSpan="4" Grid.Column="1" VerticalScrollBarVisibility="Auto" AcceptsReturn="True"
                 HorizontalAlignment="Stretch"
                 />
        <Button x:Name="Button_save" Content="Add subtask" Grid.Column="2" Margin="0,10,3,0" VerticalAlignment="Top" RenderTransformOrigin="-0.134,0.008" Click="Button_save_Click" Height="30"/>
        <Button Content="Close" Grid.Column="3" Margin="14,10,2,0" VerticalAlignment="Top" Height="30" Click="Button_Click"/>

    </Grid>
</Window>
