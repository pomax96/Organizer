<Window x:Class="BinaryStudio.WindowYesNo"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="WindowYesNo" Height="200" Width="300">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="13*"/>
            <RowDefinition Height="47*"/>
            <RowDefinition Height="80*"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="73*"/>
            <ColumnDefinition Width="145*"/>
            <ColumnDefinition Width="72*"/>
        </Grid.ColumnDefinitions>
        <Grid.Background>
            <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                <GradientStop Color="Black" Offset="0"/>
                <GradientStop Color="#FF857C7C" Offset="1"/>
            </LinearGradientBrush>
        </Grid.Background>
        <Button Content="Task compleated" Margin="1,1,2,1" RenderTransformOrigin="0.387,0.187" Click="Button_Click" Grid.Column="1" Grid.Row="1"/>
        <Button Content="Task non compleated" Margin="1,16,1,0" Click="Button_Click_1" Grid.Column="1" Grid.Row="2" Height="38" VerticalAlignment="Top"/>

    </Grid>
</Window>
